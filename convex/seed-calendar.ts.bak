import { action } from './_generated/server'
import { api } from './_generated/api'

// Seed basic calendar categories only - no sample events
export const seedCalendarData = action({
  args: {},
  returns: null,
  handler: async (ctx) => {
    // Create default event categories only (no sample data)
    const culturalCategory = await ctx.runMutation(api.calendar.createEventCategory, {
      name: 'Cultural',
      description: 'Eventos culturales y tradicionales',
      color: '#8B5CF6',
      icon: '🎭',
    })

    const agriculturalCategory = await ctx.runMutation(api.calendar.createEventCategory, {
      name: 'Agrícola',
      description: 'Eventos relacionados con agricultura y ganadería',
      color: '#10B981',
      icon: '🌾',
    })

    const meetingCategory = await ctx.runMutation(api.calendar.createEventCategory, {
      name: 'Reunión',
      description: 'Reuniones comunitarias y asambleas',
      color: '#3B82F6',
      icon: '🏛️',
    })

    const celebrationCategory = await ctx.runMutation(api.calendar.createEventCategory, {
      name: 'Celebración',
      description: 'Fiestas y celebraciones comunitarias',
      color: '#EF4444',
      icon: '🎄',
    })

    const fairCategory = await ctx.runMutation(api.calendar.createEventCategory, {
      name: 'Feria',
      description: 'Ferias y mercados locales',
      color: '#F59E0B',
      icon: '🎪',
    })

    const workshopCategory = await ctx.runMutation(api.calendar.createEventCategory, {
      name: 'Taller',
      description: 'Talleres y capacitaciones',
      color: '#6366F1',
      icon: '🔧',
    })

    console.log('✅ Calendar categories created successfully (no sample events added)')
  },
})